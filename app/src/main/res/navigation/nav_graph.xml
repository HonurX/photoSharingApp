<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.photosharingapp.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.photosharingapp.feedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_uploadingFragment"
            app:destination="@id/uploadingFragment" />
        <action
            android:id="@+id/action_feedFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/uploadingFragment"
        android:name="com.photosharingapp.uploadingFragment"
        android:label="fragment_uploading"
        tools:layout="@layout/fragment_uploading" >
        <action
            android:id="@+id/action_uploadingFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
</navigation>